#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
export OUT_PATH=/app/vendor/opencv

echo "-----> Installing opencv"

# change to the the BUILD_DIR ($1)
cd $1

# download the mruby binary (-O) silently (-s)
curl http://s3.amazonaws.com/tznode/vulcan-compiled-opencv.tgz -s -O

# make a directory to untar (like unzip) the binary
mkdir -p vendor/opencv

# untar the binary to the directory we want
tar -C vendor/opencv -xvf vulcan-compiled-opencv.tgz

# delete tmp
rm -rf vulcan-compiled-opencv.tgz

###############
#   LIBTIFF   #
###############

# Download tiff dependency
curl http://download.osgeo.org/libtiff/tiff-4.0.3.tar.gz -o libtiff.tar.gz
# Unzip
tar -xvf libtiff.tar.gz
# Get into libtiff folder
cd tiff-4.0.3
# Configure build
./configure --prefix $OUT_PATH
# Make libtiff
make
# Install libtiff
make install
